<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3F51B5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/i"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginLeft="70pt"
        android:layout_marginTop="10pt"
        android:background="@drawable/bookjpg"></ImageView>

    <TextView
        android:id="@+id/t"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8pt"
        android:layout_marginTop="10pt"
        android:text="Book Store "
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_below="@id/i"
        android:textSize="13pt"></TextView>

    <RelativeLayout
        android:layout_width="507dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_below="@id/t">


        <TextView
            android:id="@+id/t1"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:text="Login"
            android:textAlignment="center"
            android:textSize="18pt"
            android:background="#673AB7"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/e"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_below="@id/e2"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="10pt"
            android:layout_marginRight="15pt"
            android:ems="10"
            android:textSize="5pt"
            android:hint="id" />

        <EditText
            android:id="@+id/e1"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="20pt"
            android:layout_marginRight="15pt"
            android:ems="10"
            android:hint="Username"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/e2"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/e1"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="15pt"
            android:layout_marginRight="15pt"
            android:hint="Passward"
            android:textSize="8pt" />

        <Button
            android:id="@+id/b1"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/e2"
            android:layout_marginLeft="55pt"
            android:layout_marginTop="40pt"
            android:onClick="sign"
            android:text="Sign in"
            android:background="#673AB7"
            android:textColor="#ffffff"
            android:textSize="9pt" />
        <Button
            android:id="@+id/b2"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"
            android:layout_marginLeft="55pt"
            android:layout_marginTop="10pt"
            android:onClick="Delete"
            android:text="Delete"
            android:background="#673AB7"
            android:textColor="#ffffff"
            android:textSize="9pt" />
        <Button
            android:id="@+id/b3"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/b2"
            android:layout_marginLeft="55pt"
            android:layout_marginTop="10pt"
            android:onClick="update"
            android:text="Update"
            android:background="#673AB7"
            android:textColor="#ffffff"
            android:textSize="9pt" />

    </RelativeLayout>

</RelativeLayout>